<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".ProgressActivity">

    <!-- Progressbar pequena -->
    <ProgressBar

        style="@android:style/Widget.Material.ProgressBar.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!-- Progressbar tamanho estilo padrão -->
    <ProgressBar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp" />

    <!-- Progressbar grande -->
    <ProgressBar

        style="@android:style/Widget.Material.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp" />


    <!-- Progressbar no formato de barra -->
    <ProgressBar

        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:indeterminate="true" />


    <!-- Progressbar no formato de barra - Valor pre-definido -->

    <!-- Texto de status -->
    <TextView
        android:id="@+id/tvProgressStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Progresso: 0%"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- ProgressBar horizontal determinate -->
    <ProgressBar
        android:id="@+id/progressBarDeterminate"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:progress="0" />

    <!-- Botão para iniciar simulação de progresso -->
    <Button
        android:id="@+id/btnStartProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Progresso" />

</LinearLayout>